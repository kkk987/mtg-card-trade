<section class = "section">
  <div class = "container">
    <h1 class = "title is-1">Market</h1>
    <%# show what's in the masrket %>
    <div class="tile is-ancestor">
      <div class="tile is-6 is-vertical is-parent">
        <% @cards.stocks.each do |item| %>
          <div class="tile is-child box">
            <p>Title: <%= item.card.title %></p>
            <p>Seller: <%= item.seller.username.capitalize %></p>
            <p>Condition: <%= item.condition %></p>
            <p>Quantity: <%= item.quantity %></p>
            <p>Price: <%= item.price %></p>
            <%= link_to "View item", new_order_item_path(stock: item.id)%>
          </div>
        <% end %>
        <%# if nothing found in the marker, suggest user try another card %>
        <% if @cards.stocks.empty? %>
          <h1 class = "title is-2">Please search by a valid card title</h1>
        <% end %>
        <%= link_to "Back", :back %>
      </div>
    </div>  
  </div>
</section>
