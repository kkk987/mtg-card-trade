<section class = "section">
  <div class = "container">
    <h1 class = "title is-1 is-primary">Cart</h1>
    <h1 class = "title is-2 is-primary">Total: <%= @total %></h1>
    <div class="tile is-ancestor">
      <div class="tile is-6 is-vertical is-parent">
          <% @items&.each do |item| %>
              <div class="tile is-child box">
                <p>Title: <%= item.stock.card.title %></p>
                <p>Seller: <%= item.stock.seller.username.capitalize %></p>
                <p>Condition: <%= item.stock.condition %></p>
                <p>Price: <%= item.stock.price %></p>
                <%= form_with model: item, local: true do |f| %>
                  <p>Quantity: <%= f.number_field :quantity, max: item.quantity, min: 1,   step: 1 %></p>
                  <br>
                  <div class = "buttons are-normal">
                    <%= f.submit "Update", class: "button is-rounded" %>
                    <%= f.button "Delete", class: "button is-rounded" %>
                    <%= f.button "Checkout", class: "button is-rounded" %>
                  </div>
                <% end %>
                  <div>
                  </div>
              </div>
          <% end %>
      </div>
    </div>
  </div>
</section>